{{> navigation}}
{{> message}}

<div class="container p-4">
    <div class="row">
        {{#each links}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{url}}" target="blank">
                        <h3 class="card-title text-uppercase">
                            {{title}}
                        </h3>
                    </a>
                    <p class="m-2">{{description}}</p>
                    <p>{{timeAgo create_at}}</p>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <a href="/links/delete/{{id}}" class="btn btn-danger btn-block">Delete</a>
                            </div>
                            <div class="col-md-6">
                                <a href="/links/edit/{{id}}" class="btn btn-secondary btn-block">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body">
                <p>There are not links saved yet.</p>
                <a href="/links/add">Create one</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>