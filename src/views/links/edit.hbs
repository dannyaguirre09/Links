{{> navigation}}
{{> message}}

<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{links.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{links.title}}" class="form-control" name="title"
                                placeholder="Title" autofocus required>
                        </div>
                        <div class="form-group">
                            <input type="url" value="{{links.url}}" class="form-control" name="url" placeholder="Url"
                                required>
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control"
                                placeholder="Description">{{links.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <button class="btn btn-success btn-block">
                                        Edit
                                    </button>
                                </div>
                                <div class="col-md-6">
                                    <a href="/links" class="btn btn-secondary btn-block">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>